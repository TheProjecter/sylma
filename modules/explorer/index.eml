<?xml version="1.0" encoding="utf-8"?>
<le:action xmlns:le="http://www.sylma.org/execution" xmlns:li="http://www.sylma.org/interface" xmlns="http://www.w3.org/1999/xhtml" xmlns:la="/sylma/processors/action-builder/schema">
  <le:settings>
    <le:name>Explorer v2.0</le:name>
    <le:processor path="/sylma/processors/action-builder" namespace="/sylma/processors/action-builder/schema"/>
  </le:settings>
  <le:window>
    <li:add-js>/sylma/js/mootools.js</li:add-js>
    <li:add-js>/sylma/processors/action-builder/sylma.js</li:add-js>
    <li:add-js>
      <le:string>
        <le:directory/>
        <le:argument>/explorer.js</le:argument>
      </le:string>
    </li:add-js>
    <li:add-css>
      <le:string>
        <le:directory/>
        <le:argument>/explorer.css</le:argument>
      </le:string>
    </li:add-css>
    <li:add-js>
      <le:null/>
      <le:string>
        <le:argument>SYLMA_EXPLORER_PATH = '</le:argument>
        <le:directory/>
        <le:argument>';</le:argument>
      </le:string>
    </li:add-js>
  </le:window>
  <la:layer name="explorer" extend-base="sylma.explorer-classes">
    <la:property name="pathInterface">
      <le:string>
        <le:directory/>
        <le:argument>/interface</le:argument>
      </le:string>
    </la:property>
    <div id="explorer">
      <le:action path="tools/resource"/>
      <le:action path="tree"/>
      <le:action path="mozaic"/>
      <le:action path="tools/add"/>
    </div>
  </la:layer>
</le:action>
