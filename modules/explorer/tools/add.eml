<?xml version="1.0" encoding="utf-8"?>
<le:action xmlns:le="http://www.sylma.org/execution" xmlns:li="http://www.sylma.org/interface" xmlns="http://www.w3.org/1999/xhtml" xmlns:la="/sylma/processors/action-builder/schema">
  <le:settings>
    <le:name>Créer une resource</le:name>
  </le:settings>
  <div>
    <a href="#">
      <span>Créer un répertoire</span>
      <la:event name="click"><![CDATA[%ref-object%.addDirectory.show();
return false;]]></la:event>
    </a>
    <la:object class="/sylma.classes.menu" name="addDirectory">
      <form class="tools">
        <la:event name="submit"><![CDATA[return sylma.explorer.addDirectory(this);]]></la:event>
        <input type="text" name="resource-name"/>
        <input type="submit" value="Créer"/>
        <input type="submit" value="Annuler"/>
      </form>
    </la:object>
  </div>
</le:action>
