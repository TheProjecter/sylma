<?xml version="1.0" encoding="utf-8"?>
<le:action xmlns:le="http://www.sylma.org/execution" xmlns:li="http://www.sylma.org/interface" xmlns="http://www.w3.org/1999/xhtml" xmlns:lf="/sylma/processors/form/schema">
  <le:settings>
    <le:name>Edition des actualit√©s</le:name>
    <le:processor namespace="/sylma/processors/form/schema" path="/sylma/processors/form"/>
    <le:argument required="true" format="SimpleList" name="action"/>
    <le:argument required="true" format="php-string" name="source"/>
    <le:string run="true" set-variable="submit">
      <le:get-argument name="action">
        <li:get-directory/>
      </le:get-argument>
      <le:argument>/</le:argument>
      <le:get-argument name="source"/>
    </le:string>
  </le:settings>
  <lf:form enctype="multipart/form-data" action="[$submit].redirect">
    <li:set-values>
      <le:get-argument name="document"/>
    </li:set-values>
    <li:set-schemas>
      <le:get-argument name="action">
        <li:get-schema/>
      </le:get-argument>
    </li:set-schemas>
    <li:set-content>
      <lf:all-fields/>
    </li:set-content>
    <li:add-action>Envoyer</li:add-action>
    <li:add-cancel>
      <input type="button" value="Annuler" onclick="history.go(-1)"/>
    </li:add-cancel>
  </lf:form>
</le:action>
