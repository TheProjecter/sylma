<?xml version="1.0" encoding="utf-8"?>
<le:action xmlns:le="http://www.sylma.org/execution" xmlns:li="http://www.sylma.org/interface" xmlns="http://www.w3.org/1999/xhtml" xmlns:ls="http://www.sylma.org/security">
  <le:settings>
    <le:name>Template HTML</le:name>
    <le:argument required="true" format="XML_Action" name="window-action"/>
    <le:action path="/modules/tree-menu" set-variable="menu" run="true">
      <le:get-argument name="window-action"/>
    </le:action>
    <le:get-settings run="true" set-variable="keywords">window/html/keywords</le:get-settings>
    <le:get-settings run="true" set-variable="description">window/html/description</le:get-settings>
    <le:get-settings run="true" set-variable="webmaster-href">window/html/webmaster/@href</le:get-settings>
    <le:get-settings run="true" set-variable="language">window/html/language</le:get-settings>
    <le:get-settings run="true" set-variable="icone">window/html/icone</le:get-settings>
    <le:get-settings run="true" set-variable="logo">window/html/logo</le:get-settings>
    <le:get-settings run="true" set-variable="site-name">window/html/name</le:get-settings>
  </le:settings>
  <html>
    <head>
      <title>
        <le:argument> - </le:argument>
        <le:get-variable name="menu">
          <li:get-title/>
        </le:get-variable>
      </title>
      <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
      <meta name="keywords" content="[$keywords]"/>
      <meta name="description" content="[$description]"/>
      <meta http-equiv="content-language" content="[$language]"/>
      <link rel="icon" href="[$icone]" type="image/x-icon"/>
      <link rel="stylesheet" type="text/css" media="all" href="/sylma/css/global.css"/>
      <link rel="stylesheet" type="text/css" media="all" href="/sylma/css/messages.css"/>
      <link rel="stylesheet" type="text/css" media="all" href="/sylma/modules/html/global.css"/>
      <link rel="stylesheet" type="text/css" media="all" href="/sylma/modules/html/frontend.css"/>
    </head>
    <body>
      <a id="user-login" ls:mode="710" ls:group="famous" href="/sylma/modules/users/login" ls:owner="root">connexion</a>
      <div id="container">
        <div id="header">
          <a href="/">
            <h1>
              <img src="[$logo]" alt="[$site-name]"/>
              <span>
                <le:get-variable name="site-name"/>
              </span>
            </h1>
          </a>
        </div>
        <div id="center">
          <div id="col-left">
            <le:get-variable name="menu">
              <li:get-group>
                <le:argument>primary</le:argument>
                <li:parse>
                  <le:template path="/modules/tree-menu/multi.xsl"/>
                </li:parse>
              </li:get-group>
            </le:get-variable>
          </div>
          <div id="content">
            <le:get-argument name="window-action"/>
          </div>
          <div id="col-right">
            <le:get-variable name="menu">
              <li:get-group>
                <le:argument>secondary</le:argument>
                <li:parse>
                  <le:template path="/modules/tree-menu/simple.xsl"/>
                </li:parse>
              </li:get-group>
            </le:get-variable>
            <le:get-variable name="menu" ls:owner="root" ls:group="users" ls:mode="710">
              <li:get-group>
                <le:argument>admin</le:argument>
                <li:parse>
                  <le:template path="/modules/tree-menu/simple.xsl">
                    <li:set-parameter>
                      <le:argument>extension</le:argument>
                      <le:argument>.sylma</le:argument>
                    </li:set-parameter>
                  </le:template>
                </li:parse>
              </li:get-group>
            </le:get-variable>
          </div>
        </div>
        <div id="footer">Copyright Â© 2010 - <a href="[$webmaster-href]"><le:get-settings>window/html/webmaster</le:get-settings></a></div>
      </div>
    </body>
  </html>
</le:action>
